@{
    ViewData["Title"] = "Home Page";
    ViewData["Url"] = ViewContext.RouteData.Values["Action"];
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <button id="startGameButton" type="button" class="btn btn-outline-dark btn-lg" data-bs-toggle="modal" data-bs-target="#playerName">Start game</button>
</div>

<div class="modal fade" id="playerName" tabindex="-1" role="dialog" aria-hidden="true" aria-labelledby="playerNameLabel">
 <div class="modal-dialog">
     <div class="modal-content">
         <div class="modal-header">
             <h1 class="modal-title fs-5" id="playerNameLabel">Enter Username</h1>
             <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
         </div>
         <div class="modal-body">
             <form asp-action="AddPlayer" method="post">
                 <input type="text" name="username" />
             <button type="submit" class="btn btn-primary">Ok</button>
             <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
             </form>
         </div>
         <div class="modal-footer">
         </div>
     </div>
 </div>
</div>
